// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  password  String
  email     String   @unique
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Quiz      Quiz[]
  Record    Record[]
}

model Quiz {
  id        String      @id @default(cuid())
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Questions Questions[]
  user      User        @relation(fields: [userid], references: [id])
  userid    String
  Record    Record[]
}

model Questions {
  id        String   @id @default(cuid())
  name      String
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  option1   String
  option2   String
  option3   String
  option4   String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sno       Int?
}

model Record {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userid], references: [id])
  userid    String
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  answer    Json
  score     Int
  total     Int
}
